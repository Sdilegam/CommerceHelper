<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - DofusCommerceHelper_Web</title>
    <link href="./css/app.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/DofusCommerceHelper_Web.styles.css" asp-append-version="true"/>
</head>
<body>
<header class="py-0.5 border-b-2 bg-sky-50">
    <div class="container">
        <nav>
            <button class="hidden" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <ul class="flex flex-row justify-between my-2">
                <li class="navbarItem">
                    <a class="navbarLink" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="navbarItem">
                    <a class="navbarLink" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </li>
                <li class="navbarItem">
                    <a class="navbarLink" asp-area="" asp-controller="Items" asp-action="Index">Liste d'item</a>
                </li>
                <li class="navbarItem">
                    <a class="navbarLink" asp-area="" asp-controller="Categories" asp-action="Index">Liste de
                        categories</a>
                </li>
                <li class="navbarItem">
                    <a class="navbarLink" asp-area="" asp-controller="SuperCategories" asp-action="Index">Liste
                        de super-categories</a>
                </li>
            </ul>
        </nav>
    </div>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="">
    <div class="container">
        &copy; 2025 - DofusCommerceHelper_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>